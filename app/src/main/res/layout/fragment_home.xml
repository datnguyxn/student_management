<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvStudentManagementSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/student_management_system"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStudentManagementSystem"
            android:layout_centerHorizontal="true"
            android:text="@string/for_manager"
            android:textColor="@color/waveform_unselected" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="629dp"
        android:layout_marginTop="190dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddNewStudent"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_playlist_add_24"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/add_new_student_information"
                android:textColor="#a8e5d0"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#a8e5d0"
                app:strokeWidth="2dp"
                tools:ignore="DuplicateIds" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStudentList"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_folder_copy_24"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/student_information_list"
                android:textColor="#a8e5d0"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#a8e5d0"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewCertificate"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_yellow_playlist_add_24"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/new_certificate"
                android:textColor="#F3E370"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#F3E370"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCertificateList"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_yellow_folder_copy_24"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/certificate_information_list"
                android:textColor="#F3E370"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#F3E370"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnImportStudent"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_pink_playlist_add"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/import_student_information"
                android:textColor="#E39FC1"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#E39FC1"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportStudent"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_pink_folder_copy"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/export_student_information"
                android:textColor="#E39FC1"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#E39FC1"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnImportCertificate"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_orange_playlist_add"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/import_certificate_information"
                android:textColor="#FFBC8B"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#FFBC8B"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportCertificate"
                android:layout_width="0dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:drawableLeft="@drawable/baseline_orange_folder_copy"
                android:gravity="start"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/export_certificate_information"
                android:textColor="#FFBC8B"
                android:textSize="15sp"
                app:cornerRadius="5dp"
                app:strokeColor="#FFBC8B"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>