<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bottom_sheet_change_avatar"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".fragments.ChangeAvatarBottomSheetFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginVertical="@dimen/_10dp"
            android:backgroundTint="@color/transparent"
            android:drawableLeft="@drawable/baseline_photo_library_24"
            android:gravity="start"
            android:paddingTop="@dimen/_10dp"
            android:text="@string/choose_from_library"
            android:textColor="@color/FlatWhite"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemoveAvatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:layout_marginVertical="@dimen/_10dp"
            android:backgroundTint="@color/transparent"
            android:gravity="start"
            android:paddingTop="@dimen/_10dp"
            android:text="@string/remove_current_avatar"
            android:textColor="@color/flatRed"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/baseline_delete_24"
            app:iconGravity="textStart"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>